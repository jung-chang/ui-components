{
  "compilerOptions": {
  "outDir": "./dist/",
  "noImplicitAny": true,
  "module": "es6",
  "target": "es5",
  "jsx": "react",
  "allowJs": true,
  "baseUrl": ".", // Supports absolute imports.
  "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "custom.d.ts", "src/index.js"
  ]
}